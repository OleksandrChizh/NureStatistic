@{
    ViewData["Title"] = "Knure TSTM";
}

@section submenu
{
    <div class="nav-wrapper container search-block">
        <form>
            <div class="input-field">
                <input id="search" type="search" required>
                <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                <i class="material-icons">close</i>
            </div>
        </form>
    </div>
    <div class="nav-content container">
        <ul class="tabs tabs-transparent" data-is-submenu-buttons-list="true" >
            <li class="tab"><a asp-controller="Home" asp-action="IndexContent" class="active">Home</a></li>
            <li class="tab"><a asp-controller="Structure" asp-action="Teacher">Teacher</a></li>
            <li class="tab"><a asp-controller="Structure" asp-action="Group">Group</a></li>
            <li class="tab"><a asp-controller="Structure" asp-action="Auditory">Auditory</a></li>
        </ul>
    </div>
}

<div data-is-content-wrapper="true"></div>

@section scripts {       
    <environment names="Development">
      <script src="~/js/cookiemanager.js"></script>
      <script src="~/js/index.js"></script>
    </environment>
    <environment names="Staging,Production">
      <script src="~/js/cookiemanager.min.js"></script>
      <script src="~/js/index.min.js"></script>
    </environment>
}